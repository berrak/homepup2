#
# This file is for asgard (gateway)
#
# The loopback network interface
auto lo
iface lo inet loopback

<%= loadfirewall %>

# Domain 'sec.home.tld' interface IF_INT (eth0 is always in INT_NET and forward to eth1)
auto eth0
allow-hotplug eth0
iface eth0 inet static
	address 192.168.2.1
	netmask 255.255.255.0
	network 192.168.2.0
	broadcast 192.168.2.255

# Domain 'home.tld' interface IF_EXT (eth1 is always upstream to gateway) 
auto eth1
allow-hotplug eth1
iface eth1 inet static
	address 192.168.0.254
	netmask 255.255.255.0
	network 192.168.0.0
	broadcast 192.168.0.255
        gateway 192.168.0.1

