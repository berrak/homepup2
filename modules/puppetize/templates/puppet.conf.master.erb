########################################################################
##  Puppet Master Configuration File
########################################################################
[main]
logdir=/var/log/puppet
vardir=/var/lib/puppet
rundir=/var/run/puppet
factpath=$vardir/lib/facter
ssldir=/etc/puppet/ssl
templatedir=$confdir/templates
modulepath=$confdir/modules

# Which port master listen on
masterport = 8140

# Port that puppet agent listen on (from this server)
puppetport = 8139

[master]
# The 'node name' of the puppet server (defaults to host fqdn but to be explicit)
server = <%= puppetserver %>

# The 'certificate name' for master (defaults to host fqdn but to be explicit)
certname = <%= nodename %>

[agent]
# Where to find the puppet server
server = <%= puppetserver %>

# The authentication name this client use for puppet master
certname = <=% clientpuppetnodename %>

