#############################################################
#
# LOGGING
# custom logging options (see 10-logging.conf for details)
#------------------------------------------------------------
log_path = /var/log/dovecot-imap.err
info_log_path = /var/log/dovecot-imap.info
auth_verbose = yes
mail_debug = yes

# AUTHENTICATION
# set temporary to 'no' for test (see 10-auth.conf for details)
#------------------------------------------------------------
disable_plaintext_auth = no

# SSL/TLS 
# set temporary to 'no' for test (see 10-ssl.conf for details)
#------------------------------------------------------------
ssl = no

# MAIL 
# use system users homes (see 10-mail.conf for details)
#------------------------------------------------------------
mail_location = ~/Maildir

# LDA
# use dovecot Local Delivery Agent (see 15-lda.conf for details)
#------------------------------------------------------------
postmaster_address = postmaster@<%= mydomain %>

# 
# USER/PWD FILE
# initial authentication setup (see auth-passwdfile.conf.ext)
#------------------------------------------------------------
passdb {
  driver = passwd-file
  args = username_format=%n /etc/dovecot/imap.passwd
}

userdb {
  driver = passwd-file
  args = username_format=%n /etc/dovecot/imap.passwd

}




