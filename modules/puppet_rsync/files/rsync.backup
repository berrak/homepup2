LOGGER=/usr/bin/logger
RSYNC=/usr/bin/rsync
OPTIONS="-aqWC"

USERBACKUPFILE="$HOME/bin/${USER}.backup"

###############################
# MAIN PROGRAM
###############################

# This scripts is run at lightdm session start (i.e user
# login). User environment is set like $HOME and $USER.

# Source the user configuration file
if [ -r "$USERBACKUPFILE" ]; then
   .  "$USERBACKUPFILE"
fi

# Ensure we have network connection and that the rsync
# server is operational. Supress the returned file list.
export RSYNC_PASSWORD="$MYPASSWORD"
$RSYNC bekr@192.168.2.83::shire-home  > /dev/null
remotesuccess=$?

if [ "$remotesuccess" -ne 0 ]; then
    $LOGGER -p local0.debug "$0: Error! rsync returned ($remotesuccess) at login! User ($USER) in ($HOME)."
else
    $LOGGER -p local0.debug "$0: Success! Remote rsync initiated at login! Found directory list ($BACKUP_DIRECTORIES)."
    $RSYNC $OPTIONS $BACKUP_DIRECTORIES bekr@192.168.2.83::shire-home
    remotesuccess=$?
    if [ "$remotesuccess" -ne 0 ]; then
        $LOGGER -p local0.debug "$0: Error! rsync returned ($remotesuccess). Failed to backup ($BACKUP_DIRECTORIES)."
    else
        $LOGGER -p local0.debug "$0: Success! Backup directories($BACKUP_DIRECTORIES)."
    fi
fi
# empty the environment
RSYNC_PASSWORD=
