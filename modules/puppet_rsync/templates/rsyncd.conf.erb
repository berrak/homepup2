#
# /etc/rsyncd.conf
#
#############################################################
# MANAGE BY PUPPET. DO NOT EDIT. CHANGES WILL BE WIPED OUT. #
#############################################################
#
# Configuration for backup server using rsync.
#
# Note: don't specify pid since it's handled by init.d
#
log file = /var/log/rsyncd.log
transfer logging = yes
read only = no
uid = root
gid = root
list = yes

# Below provides only weak authentication, root
# can use 'user' name and bypass password.
# Unprivileged users can not bypass this though.
auth users = <%= authuser1 %>
secrets file = <%= securefile %>

[<%= backupfromhost %>-nfs]
comment = Backup of data files from desktop authuser1 NFS share
path = /srv/backup/<%= backupfromhost %>/<%= authuser1 %>/nfs
hosts allow = <%= hostallowip %>

[<%= backupfromhost %>-home]
comment = Backup of data files from desktop user1 other home directories
path = /srv/backup/<%= backupfromhost %>/<%= authuser1 %>/home
hosts allow = <%= hostallowip %>

[warp-local]
comment = Test of local access or backup with rsync
path = /srv/localrsync
hosts allow = 192.168.2.83

