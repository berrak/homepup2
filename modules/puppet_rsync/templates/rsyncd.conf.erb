#
# /etc/rsyncd.conf
#
#############################################################
# MANAGE BY PUPPET. DO NOT EDIT. CHANGES WILL BE WIPED OUT. #
#############################################################
#
# Configuration for backup server using rsync.
#
# Note: don't specify pid since it's handled by init.d
#
log file = /var/log/rsyncd.log
transfer logging = yes
read only = no
uid = root
gid = root
list = yes

# Below provides only weak authentication, root
# can use 'user' name and bypass password.
# Unprivileged users can not bypass this though.
auth users = bekr
secrets file = <%= securefile %>

[shire-nfs]
comment = Backup of exported (NFS) data files from desktop user bekr
path = /srv/backup/shire/bekr/nfs
hosts allow = 192.168.0.10

[shire-home]
comment = Backup of shire data files from desktop user bekr
path = /srv/backup/shire/bekr/home
hosts allow = 192.168.0.10

[mordor-home]
comment = Backup of mordor data files from desktop user bekr
path = /srv/backup/mordor/bekr/home
hosts allow = 192.168.0.100

[warp-home]
comment = Test of local access or backup with rsync
path = /srv/localrsync
hosts allow = 192.168.2.83

