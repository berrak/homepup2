#!/bin/sh

cd /home/<%= name %> || exit 0

make && make dist

for FILE in *.gz ; do
    
        test -f /home/<%= name %>/$FILE  && chown <%= name %>:<%= name %> /home/<%= name %>/$FILE  || continue

        cp -p /home/<%= name %>/$FILE /var/backups/$FILE  && chmod 644 /var/backups/$FILE
        
done
