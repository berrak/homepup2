#!/bin/sh

cd /home/<%= name %>/<%= projectname %> || exit 0

make && make dist

for FILE in *.gz ; do
    
        test -f /home/<%= name %>/<%= projectname %>/$FILE                   || continue
    
        cp -p /home/<%= name %>/<%= projectname %>/$FILE /var/backups/$FILE  && chmod 644 /var/backups/$FILE
        
done

